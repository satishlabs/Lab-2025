package com.ds.sl;

public class MiddleNode {
	private static Node head;
	public static void main(String[] args) {
		Node node = new Node(10);
		node.next = new Node(20);
		node.next.next = new Node(30);
		node.next.next.next = new Node(40);
		
		System.out.println(getMiddleNode(node));
	}

	private static int getMiddleNode(Node node) {
		int length = getLengthNode(node);
		int middleNode = length/2;
		while(middleNode >0) {
			node = node.next;
			middleNode--;
		}
		return node.data;
	}

	private static int getLengthNode(Node node) {
		Node temp = head;
		int length=0;
		while(temp != null) {
			length++;
			temp = temp.next;
		}
		return length;
	}
}
