package com.arr;

import java.util.Arrays;
import java.util.Map;
import java.util.function.Function;
import java.util.stream.Collectors;

public class CountRepeatedWords {
	public static void main(String[] args) {
        String str = "Hello world hello Java hello world Java Java";
        String[] words = str.split("\\s+");
        
        Map<String, Long> collect = Arrays.stream(words)
        		.collect(Collectors.groupingBy(Function.identity(), Collectors.counting()));
        collect.forEach((word, value) -> System.out.println(word+" : "+value));
        
        int[] arr = {1,2,3,4,5,2,3,5,6,7};
        Arrays.stream(arr).collect(Collectors.groupingBy(Function.identity(), Collectors.counting()));
	}
}
