package com.str;

public class LongestStringPlaindrom {
	public static void main(String[] args) {
		String str = "babad";
		System.out.println(longestSubstringPalindrom(str));
	}

	private static String longestSubstringPalindrom(String str) {
		String longest = "";
		for(int i=0; i<str.length(); i++) {
			for(int j=i; j<str.length(); j++) {
				String sub = str.substring(i, j+1);
				if(isPlaindrom(str) && sub.length() > longest.length()) {
					longest = sub;
				}
			}
		}
		return longest;
	}

	private static boolean isPlaindrom(String str) {
		int left = 0;
		int right = str.length()-1;
		while(left < right) {
			if(str.charAt(left++) != str.charAt(right))
				return false;
		}
		return true;
	}
}
